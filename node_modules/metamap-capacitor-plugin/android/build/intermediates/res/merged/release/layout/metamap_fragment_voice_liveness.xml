<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metamap_background_color_dark"
    android:id="@+id/clVoiceLivenessUploadParentLayout"
    android:theme="@style/ContainerDark">

    <androidx.camera.view.PreviewView
        android:id="@+id/pvPreviewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.VideoOverlay
        android:id="@+id/voVoiceLiveNessUpload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/tvDone"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_28sdp"
        app:isPrimary="true"
        android:text="@string/metamap_label_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDigits"
        style="@style/Text.FragmentTitle"
        android:layout_marginBottom="@dimen/_24sdp"
        android:textColor="@color/metamap_green_text"
        android:textSize="@dimen/_36ssp"
        app:layout_constraintBottom_toTopOf="@id/tvDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1 - 2 - 3" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle.CaptureScreen"
        android:text="@string/metamap_LivenessVoiceCapture_sayDigits"
        app:layout_constraintBottom_toTopOf="@id/tvDigits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>