<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ContainerLight"
    android:id="@+id/clCPFEntryParentLayout">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Driving License" />

    <TextView
        android:id="@+id/tvTitleCountry"
        style="@style/Text.FragmentSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Some subtitle" />


    <TextView
        android:id="@+id/tvDescription"
        style="@style/Text.EtInfo"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/metamap_cpf_requirement_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCountry" />


    <com.metamap.sdk_components.feature.document.fragment.CpfEditText
        android:id="@+id/etCpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />


    <ImageView
        android:id="@+id/ivCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/metamap_bg_et_cpf_normal"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/btnSkipSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCpf"
        tools:ignore="ContentDescription" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnSkipSubmit"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_28sdp"
        app:isPrimary="true"
        android:text="@string/metamap_cpf_button_skip_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>