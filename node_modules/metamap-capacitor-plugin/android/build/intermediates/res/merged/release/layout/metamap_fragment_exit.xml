<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContainerLight"
    android:id="@+id/clExitParentLayout">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:text="@string/metamap_label_want_to_leave_verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_label_you_will_lose_all_uploaded_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />


    <ImageView
        android:id="@+id/ivMain"
        style="@style/MainIcon"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintBottom_toTopOf="@+id/btnActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        app:srcCompat="@drawable/metamap_ic_exit" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.SecondaryNew"
        android:backgroundTint="@color/metamap_color_red"
        android:textColor="@color/metamap_white"
        android:text="@string/metamap_label_exit"
        app:strokeWidth="0dp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/btnActionContinueToVerification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_32sdp" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionContinueToVerification"
        style="@style/Button.SecondaryNew"
        android:text="@string/metamap_label_continue_verification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
