<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_32sdp"
    android:paddingVertical="@dimen/_12sdp"
    android:background="@color/metamap_background_color_light"
    android:gravity="center_horizontal"
    android:id="@+id/llVerificationPreviewBigParentLayout"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivVerificationStep"
        style="@style/StartVerificationIconBig" />

    <TextView
        android:id="@+id/tvVerificationSteps"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_16ssp" />

</LinearLayout>