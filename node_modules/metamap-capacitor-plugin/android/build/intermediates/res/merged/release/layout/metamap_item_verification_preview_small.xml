<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_12sdp"
    android:background="@color/metamap_background_color_light"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/llVerificationPreviewSmallParentLayout"
    android:paddingHorizontal="@dimen/_32sdp">

    <ImageView
        android:id="@+id/ivVerificationStep"
        style="@style/StartVerificationIconSmall" />

    <TextView
        android:id="@+id/tvVerificationSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24sdp"
        android:textSize="@dimen/_14ssp" />

</LinearLayout>