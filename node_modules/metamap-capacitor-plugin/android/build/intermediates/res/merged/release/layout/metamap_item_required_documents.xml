<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_30sdp"
    android:gravity="center_vertical"
    android:id="@+id/clItemRequiredDocParentLayout"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFirstContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/tvFirstItemOr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivFirstDocument"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvFirstDocumentType"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ivFirstDocument"
            app:layout_constraintStart_toStartOf="@+id/ivFirstDocument"
            app:layout_constraintTop_toBottomOf="@+id/ivFirstDocument"
            android:gravity="center"
            style="@style/RequiredDocItemView" />

        <TextView
            android:id="@+id/tvBottomOr"
            android:text="@string/metamap_label_or"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/ivFirstDocument"
            app:layout_constraintStart_toStartOf="@+id/ivFirstDocument"
            app:layout_constraintTop_toBottomOf="@+id/tvFirstDocumentType"
            style="@style/RequiredDocItemView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvFirstItemOr"
        android:text="@string/metamap_label_or"
        app:layout_constraintVertical_bias="0.4"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clSecondItemContainer"
        app:layout_constraintStart_toEndOf="@+id/clFirstContainer"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RequiredDocItemView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSecondItemContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSecondItemOr"
        app:layout_constraintStart_toEndOf="@+id/tvFirstItemOr"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSecondDocument"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvSecondDocumentType"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/ivSecondDocument"
            app:layout_constraintStart_toStartOf="@+id/ivSecondDocument"
            app:layout_constraintTop_toBottomOf="@+id/ivSecondDocument"
            style="@style/RequiredDocItemView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSecondItemOr"
        android:text="@string/metamap_label_or"
        app:layout_constraintVertical_bias="0.4"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clSecondItemContainer"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/RequiredDocItemView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/clFirstContainer">

        <View
            android:id="@+id/viewDividerTopAnd"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@color/metamap_divider_color"
            app:layout_constraintBottom_toBottomOf="@+id/tvAnd"
            app:layout_constraintEnd_toStartOf="@+id/tvAnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvAnd" />

        <TextView
            android:id="@+id/tvAnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:maxLines="2"
            android:text="@string/metamap_label_and"
            android:textColor="@color/metamap_color_accent"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewDividerBottomAnd"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@color/metamap_divider_color"
            app:layout_constraintBottom_toBottomOf="@+id/tvAnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvAnd"
            app:layout_constraintTop_toTopOf="@+id/tvAnd" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>