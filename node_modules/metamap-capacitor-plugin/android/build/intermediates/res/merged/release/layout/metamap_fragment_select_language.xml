<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llSelectLanguageParentLayout">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:text="@string/metamap_label_select_language" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLanguages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_28sdp"
        app:isPrimary="true"
        android:text="@string/metamap_label_choose" />

</LinearLayout>