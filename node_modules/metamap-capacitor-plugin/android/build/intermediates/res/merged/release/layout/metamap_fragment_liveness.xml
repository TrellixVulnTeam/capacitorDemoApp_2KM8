<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ContainerDark"
    android:id="@+id/clLivenessParentFragmentLayout"
    android:background="@color/metamap_background_color_dark">

    <androidx.camera.view.PreviewView
        android:id="@+id/pvPreviewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.VideoOverlay
        android:id="@+id/voLiveness"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivRecordingIndicator"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@drawable/metamap_ic_rec_liveness"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.RoundVideoView
        android:id="@+id/rvvLivenessHint"
        android:translationZ="2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_26sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/ivRotateCameraCTA"
        style="@style/CaptureSecondaryAction"
        app:layout_constraintBottom_toBottomOf="@id/ivActionPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivActionPrimary"
        app:srcCompat="@drawable/metamap_ic_rotate_camera" />

    <ImageView
        android:id="@+id/ivActionPrimary"
        style="@style/CaptureAction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/metamap_ic_start_liveness" />

    <TextView
        android:id="@+id/tvHintLiveness"
        style="@style/Text.DescNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/metamap_hint_balloon"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivActionPrimary"
        app:layout_constraintEnd_toEndOf="@id/ivActionPrimary"
        app:layout_constraintStart_toStartOf="@id/ivActionPrimary"
        tools:text="Button Hint" />

    <TextView
        android:id="@+id/tvMakeTwoCirclesWithNoseTxt"
        style="@style/Text.FragmentTitle"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="@string/metamap_label_make_circles_with_nose"
        app:layout_constraintBottom_toTopOf="@id/tvHintLiveness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEsign"
        style="@style/Text.FragmentTitle"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="@string/metamap_label_part_of_esign_liveness"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tvHintLiveness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>