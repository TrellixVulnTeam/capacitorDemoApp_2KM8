<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ContainerDark"
    android:animateLayoutChanges="true"
    android:id="@+id/clTakeSelfieParentLayout"
    android:background="@color/metamap_background_color_dark">

    <androidx.camera.view.PreviewView
        android:id="@+id/pvPreviewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.VideoOverlay
        android:id="@+id/voTakeSelfieFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle.CaptureScreen"
        android:text="@string/metamap_label_position_your_face_in_center"
        app:layout_constraintBottom_toTopOf="@id/ivActionCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvESign"
        style="@style/Text.FragmentTitle.CaptureScreen"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/ivActionCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="By taking this selfie you are agreeing to the document you were shown before." />

    <ImageView
        android:id="@+id/ivActionRotateCamera"
        style="@style/CaptureSecondaryAction"
        app:layout_constraintBottom_toBottomOf="@id/ivActionCapture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivActionCapture"
        app:srcCompat="@drawable/metamap_ic_rotate_camera"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivActionCapture"
        style="@style/CaptureAction"
        android:src="@drawable/metamap_ic_capture"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>