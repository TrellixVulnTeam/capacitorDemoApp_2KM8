<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivErrorImage"
        style="@style/MainIcon"
        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/metamap_ic_country_restricted" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="@string/metamap_label_ip_title"
        app:layout_constraintBottom_toTopOf="@+id/tvSubTitle"
        app:layout_constraintTop_toBottomOf="@id/ivErrorImage" />

    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_label_ip_description"
        app:layout_constraintBottom_toTopOf="@+id/btnSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnClose"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_28sdp"
        app:isPrimary="true"
        android:text="@string/metamap_label_close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnSkip"
        style="@style/Button.SecondaryNew"
        android:layout_width="match_parent"
        android:text="@string/metamap_label_skip"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
