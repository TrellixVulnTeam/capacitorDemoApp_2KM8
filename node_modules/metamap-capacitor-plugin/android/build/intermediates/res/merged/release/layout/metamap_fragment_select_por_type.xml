<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clSelectPORTypeParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metamap_background_color_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bank Statement" />

    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/Text.FragmentSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Mexico" />


    <ImageView
        android:id="@+id/ivMain"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_160sdp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/tvSelectProofOfResidenceOptionHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/metamap_ic_proof_noborder" />

    <TextView
        android:id="@+id/tvSelectProofOfResidenceOptionHint"
        style="@style/Text.EtInfo"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="@string/metamap_por_options_selector_hint"
        android:textColor="@color/metamap_primary_text"
        app:layout_constraintBottom_toTopOf="@id/spinnerProofOfOptionList"
        app:layout_constraintEnd_toEndOf="@id/spinnerProofOfOptionList"
        app:layout_constraintStart_toStartOf="@id/spinnerProofOfOptionList"
        app:layout_constraintTop_toBottomOf="@id/ivMain" />

    <Spinner
        android:id="@+id/spinnerProofOfOptionList"
        style="@style/Text.SpinnerRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/metamap_bg_new_select_country_spinner"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectProofOfResidenceOptionHint"
        tools:listitem="@layout/metamap_item_por_type" />


    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_28sdp"
        app:isPrimary="true"
        android:text="@string/metamap_label_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>