<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clDocHintParentLayout"
    android:background="@color/metamap_background_color_light">

    <ProgressBar
        android:id="@+id/pbProgressPhoto"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/ivDocumentImage"
        app:layout_constraintEnd_toEndOf="@id/ivDocumentImage"
        app:layout_constraintStart_toStartOf="@id/ivDocumentImage"
        app:layout_constraintTop_toTopOf="@id/ivDocumentImage" />

    <TextView
        android:id="@+id/tvTitleDocumentHint"
        style="@style/Text.FragmentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Driving License" />

    <TextView
        android:id="@+id/tvTitleCountryDocumentHint"
        style="@style/Text.FragmentSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDocumentHint"
        tools:text="Some subtitle" />

    <TextView
        android:id="@+id/tvDescDocumentHint"
        style="@style/Text.SubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_36sdp"
        android:ellipsize="end"
        android:maxLines="3"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleCountryDocumentHint"
        tools:text="" />


    <ImageView
        android:id="@+id/ivDocumentImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_36sdp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/tvDocSide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescDocumentHint"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/metamap_ic_national_id_front" />

    <TextView
        android:id="@+id/tvDocSide"
        style="@style/Text.FragmentSubtitle"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        app:layout_constraintBottom_toTopOf="@+id/btnActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Front" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.Main"
        app:icon="@drawable/metamap_ic_camera"
        android:text="@string/metamap_label_done"
        app:isPrimary="true"
        app:layout_constraintBottom_toTopOf="@id/btnActionSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_28sdp">

    </com.metamap.sdk_components.widget.MetamapIconButton>

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionSecondary"
        style="@style/Button.SecondaryNew"
        android:layout_marginBottom="@dimen/_8sdp"
        app:icon="@drawable/metamap_ic_attachfileicon"
        android:text="@string/metamap_label_attach_file"
        app:layout_constraintBottom_toTopOf="@id/utvSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_28sdp">

    </com.metamap.sdk_components.widget.MetamapIconButton>


    <com.metamap.sdk_components.widget.UnderlineTextView
        android:id="@+id/utvSkip"
        style="@style/Text.Skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/pbProgressUpload"
        style="@style/BottomProgressBar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>