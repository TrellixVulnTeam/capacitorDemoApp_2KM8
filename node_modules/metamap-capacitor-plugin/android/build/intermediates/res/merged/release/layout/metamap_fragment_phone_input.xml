<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/clPhoneInputParentlayout"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:text="@string/metamap_label_sms_check_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_label_sms_check_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />


    <View
        android:id="@+id/vFocusCatcher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlPhoneNumberDisplayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:layout_constraintBottom_toTopOf="@id/btnActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <TextView
            android:id="@+id/tvCountryCode"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/metamap_bg_new_secondary_button"
            android:drawablePadding="@dimen/_4sdp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textSize="@dimen/_14ssp"
            app:drawableRightCompat="@drawable/metamap_ic_arrow_bottom" />

        <LinearLayout
            android:id="@+id/llPhoneNumberContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvCountryCode"
            android:background="@drawable/metamap_bg_new_secondary_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPhoneCode"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/_8sdp"
                android:layout_height="@dimen/_48sdp"
                android:gravity="center_vertical|right"
                android:textColor="@color/metamap_secondary_text"
                android:textSize="@dimen/_14ssp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="@dimen/_48sdp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="number"
                android:textColor="@color/metamap_secondary_text"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llPhoneNumberContainer"
            android:layout_toRightOf="@id/tvCountryCode"
            android:lines="2"
            android:textColor="@color/metamap_color_red"
            android:visibility="invisible" />

    </RelativeLayout>


    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_16sdp"
        app:isPrimary="true"
        android:text="@string/metamap_label_sms_check_button"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/utvSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_28sdp" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionSecondary"
        style="@style/Button.SecondaryNew"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="@string/metamap_label_sms_check_resend_button"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/utvSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_28sdp" />

    <TextView
        android:id="@+id/tvResendTimer"
        style="@style/Text.FragmentSubtitle"
        android:layout_marginBottom="@dimen/_8sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/utvSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_28sdp"
        tools:text="Resend sms in 54 seconds" />

    <ProgressBar
        android:id="@+id/pbPrimaryProgress"
        android:visibility="invisible"
        style="@style/BottomProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.metamap.sdk_components.widget.UnderlineTextView
        android:id="@+id/utvSkip"
        style="@style/Text.Skip"
        android:text="@string/metamap_label_skip"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>