<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clLivenessPreviewParentLayout"
    android:background="@color/metamap_background_color_dark"
    android:theme="@style/ContainerDark">

    <TextureView
        android:id="@+id/tvTextureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.VideoOverlay
        android:id="@+id/voLivenessPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPlayCTA"
        android:layout_width="@dimen/_56sdp"
        android:layout_height="@dimen/_56sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/metamap_ic_play_liveness" />

    <ImageView
        android:id="@+id/ivRetryCTA"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:src="@drawable/metamap_ic_retry_liveness"
        app:layout_constraintBottom_toBottomOf="@id/ivUpload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUpload" />

    <ImageView
        android:id="@+id/ivUpload"
        style="@style/CaptureAction"
        android:src="@drawable/metamap_ic_done_liveness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvLivenessHint"
        style="@style/Text.DescNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/metamap_hint_balloon"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/metamap_label_done"
        app:layout_constraintBottom_toTopOf="@id/ivUpload"
        app:layout_constraintEnd_toEndOf="@id/ivUpload"
        app:layout_constraintStart_toStartOf="@id/ivUpload" />

</androidx.constraintlayout.widget.ConstraintLayout>