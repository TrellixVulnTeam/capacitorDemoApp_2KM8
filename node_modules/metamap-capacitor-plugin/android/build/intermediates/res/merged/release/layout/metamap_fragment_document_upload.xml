<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metamap_background_color_dark"
    android:theme="@style/ContainerDark">

    <ImageView
        android:id="@+id/ivDocumentUpload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.DocumentCameraOverlay
        android:id="@+id/dcoOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.metamap.sdk_components.widget.DocumentCameraOverlayBrazilianDL
        android:id="@+id/dcoOverlayBrazilianDL"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle.CaptureScreen"
        android:text="@string/metamap_label_uploading"
        android:lines="2"
        android:gravity="bottom|center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/pbProgress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/pbProgress"
        style="@style/CaptureAction"
        android:src="@drawable/metamap_ic_done_liveness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>