<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clStartVerificationParentLayout">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:text="@string/metamap_label_verify_your_identity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_label_to_get_verified_you_will_need_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <LinearLayout
        android:id="@+id/llStartVerificationMeritContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/tvTermAndCondition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitle">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVerificationStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_32sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />

    </LinearLayout>



    <TextView
        android:id="@+id/tvTermAndCondition"
        style="@style/Text.FragmentSubtitle"
        android:layout_marginBottom="@dimen/_8sdp"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintBottom_toTopOf="@+id/btnActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="terms and conditions" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_28sdp"
        app:isPrimary="true"
        android:tag="primary"
        android:text="@string/metamap_label_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/pbApiProgressState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>
