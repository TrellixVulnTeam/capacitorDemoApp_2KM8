<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPORHintParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bank Statement" />

    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/Text.FragmentSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Mexico" />

    <ImageView
        android:id="@+id/ivMain"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/llValidityHint"
        app:layout_constraintEnd_toStartOf="@id/tvFirstHint"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/metamap_ic_proof_noborder"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvHintTitle"
        style="@style/Text.FragmentTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="start"
        android:text="@string/metamap_label_por_type_hint_title"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/tvFirstHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivMain"
        app:layout_constraintTop_toTopOf="@id/ivMain" />

    <TextView
        android:id="@+id/tvFirstHint"
        style="@style/Text.PorHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/metamap_select_por_first_hint"
        app:layout_constraintBottom_toTopOf="@id/tvSecondHint"
        app:layout_constraintEnd_toEndOf="@id/tvHintTitle"
        app:layout_constraintStart_toStartOf="@id/tvHintTitle"
        app:layout_constraintTop_toBottomOf="@id/tvHintTitle" />

    <TextView
        android:id="@+id/tvSecondHint"
        style="@style/Text.PorHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintBottom_toTopOf="@id/tvThirdHint"
        app:layout_constraintEnd_toEndOf="@id/tvFirstHint"
        app:layout_constraintStart_toStartOf="@id/tvFirstHint"
        app:layout_constraintTop_toBottomOf="@id/tvFirstHint"
        tools:text="Second Hint" />

    <TextView
        android:id="@+id/tvThirdHint"
        style="@style/Text.PorHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="@string/metamap_select_por_third_hint"
        app:layout_constraintBottom_toTopOf="@id/tvFourthHint"
        app:layout_constraintEnd_toEndOf="@id/tvFirstHint"
        app:layout_constraintStart_toStartOf="@id/tvFirstHint"
        app:layout_constraintTop_toBottomOf="@id/tvSecondHint" />

    <TextView
        android:id="@+id/tvFourthHint"
        style="@style/Text.PorHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="@string/metamap_select_por_fourth_hint"
        app:layout_constraintBottom_toBottomOf="@id/ivMain"
        app:layout_constraintEnd_toEndOf="@id/tvFirstHint"
        app:layout_constraintStart_toStartOf="@id/tvFirstHint"
        app:layout_constraintTop_toBottomOf="@id/tvThirdHint" />

    <LinearLayout
        android:id="@+id/llValidityHint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/metamap_bg_por_validity_date_hint"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/btnActionPrimary"
        app:layout_constraintEnd_toEndOf="@id/tvHintTitle"
        app:layout_constraintStart_toStartOf="@id/ivMain"
        app:layout_constraintTop_toBottomOf="@id/ivMain"
        app:layout_constraintVertical_bias="0">

        <ImageView
            android:id="@+id/ivValidityHintSymbol"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_12sdp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/metamap_ic_info"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvValidityHint"
            style="@style/Text.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            tools:text="Must be not older than 1 Nov, 2021" />
    </LinearLayout>

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.Main"
        app:icon="@drawable/metamap_ic_camera"
        app:isPrimary="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnActionSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_28sdp" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionSecondary"
        style="@style/Button.SecondaryNew"
        app:icon="@drawable/metamap_ic_attachfileicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>