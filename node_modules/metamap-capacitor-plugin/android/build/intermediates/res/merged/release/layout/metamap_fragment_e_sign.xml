<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/metamap_white"
    android:id="@+id/clESignParentLayout"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pbProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:translationZ="2dp"
        android:indeterminateTint="@color/metamap_color_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:text="@string/metamap_label_signature_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_label_signature_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPdfContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@+id/flContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        app:cardCornerRadius="@dimen/_8sdp"
        android:foreground="@drawable/metamap_esign_border"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tvOpenPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:padding="@dimen/_8sdp"
            android:text="@string/metamap_label_openPDF"
            android:textColor="@color/metamap_secondary_text"
            android:textSize="@dimen/_12ssp"
            app:drawableStartCompat="@drawable/metamap_ic_doc" />

        <com.metamap.sdk_components.widget.pinch_recycler_view.PinchRecyclerView
            android:id="@+id/rvPdf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_28sdp"
            android:elevation="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <ProgressBar
            android:id="@+id/pbPdfLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/metamap_color_accent"
            android:layout_gravity="center"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSignatureContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_28sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvNameTitle"
                style="@style/Text.EtInfo"
                android:layout_width="0dp"
                android:text="@string/metamap_label_signature_name"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@id/etName"
                app:layout_constraintStart_toStartOf="@id/etName"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/etName"
                style="@style/Text.Input"
                android:layout_marginTop="@dimen/_4sdp"
                android:hint="@string/metamap_label_full_name_placeholder"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNameTitle" />


            <TextView
                android:id="@+id/tvSignHint"
                style="@style/Text.DescNew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="@string/metamap_label_signature_description"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toTopOf="@+id/btnSign"
                app:layout_constraintEnd_toEndOf="@id/etName"
                app:layout_constraintStart_toStartOf="@id/etName"
                app:layout_constraintTop_toBottomOf="@+id/etName" />

            <com.metamap.sdk_components.widget.MetamapIconButton
                android:id="@+id/btnSign"
                style="@style/Button.Main"
                android:enabled="false"
                app:isPrimary="true"
                android:layout_marginBottom="0dp"
                android:text="@string/metamap_label_sign"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSignHint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clMoveToNextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_28sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvFooter"
                style="@style/Text.DescNew"
                android:layout_width="0dp"
                android:text="@string/metamap_label_signature_first_description"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toTopOf="@+id/btnNext"
                app:layout_constraintEnd_toEndOf="@id/btnNext"
                app:layout_constraintStart_toStartOf="@id/btnNext"
                app:layout_constraintTop_toTopOf="parent" />

            <com.metamap.sdk_components.widget.MetamapIconButton
                android:id="@+id/btnNext"
                style="@style/Button.Main"
                app:isPrimary="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:enabled="false"
                android:text="@string/metamap_label_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFooter" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>