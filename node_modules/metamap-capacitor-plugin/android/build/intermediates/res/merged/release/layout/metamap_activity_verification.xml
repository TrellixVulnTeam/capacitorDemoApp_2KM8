<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.metamap.sdk_components.featue_common.ui.verification.VerificationActivity">

    <com.metamap.sdk_components.widget.toolbar.MetamapToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:navGraph="@navigation/metamap_flow_navigation" />

    <LinearLayout
        android:id="@+id/llPoweredBy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvActionSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="@string/metamap_label_poweredby"
            style="@style/Text.DescNew"
            android:textSize="@dimen/_8ssp" />

        <ImageView
            android:id="@+id/ivBrandLogo"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:clickable="false"
            android:src="@drawable/metamap_logo_dark_text_vector" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>