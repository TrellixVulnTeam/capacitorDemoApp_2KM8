<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clBaseErrorParentLayout"
    style="@style/ContainerLight">

    <ImageView
        android:id="@+id/ivErrorImage"
        style="@style/MainIcon"
        app:layout_constraintBottom_toTopOf="@id/tvErrorTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/metamap_img_phone" />

    <TextView
        android:id="@+id/tvErrorTitle"
        style="@style/Text.FragmentTitle"
        android:layout_marginTop="@dimen/_24sdp"
        app:layout_constraintBottom_toTopOf="@+id/tvErrorMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivErrorImage"
        tools:text="Warning" />

    <TextView
        android:id="@+id/tvErrorMessage"
        style="@style/Text.FragmentSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvErrorTitle"
        tools:text="Please try again and make sure the picture is clear." />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionPrimary"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_28sdp"
        app:isPrimary="true"
        android:text="@string/metamap_label_try_again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

