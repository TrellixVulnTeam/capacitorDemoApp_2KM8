<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_64sdp"
    android:layout_height="@dimen/_64sdp"
    android:paddingHorizontal="@dimen/_12sdp"
    android:id="@+id/llVerificationPreviewSmallHorParentLayout"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/metamap_background_color_light">

    <ImageView
        android:id="@+id/ivVerificationStep"
        style="@style/MainIcon"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_8sdp" />

    <TextView
        android:id="@+id/tvVerificationSteps"
        style="@style/Text.DescNew"
        android:gravity="top|center_horizontal"
        android:lines="5"
        android:textStyle="bold" />

</LinearLayout>