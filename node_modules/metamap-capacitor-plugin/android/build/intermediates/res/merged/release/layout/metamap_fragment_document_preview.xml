<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/metamap_background_color_dark"
    android:theme="@style/ContainerDark">

    <ImageView
        android:id="@+id/ivMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.DocumentCameraOverlay
        android:id="@+id/dcoOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.metamap.sdk_components.widget.DocumentCameraOverlayBrazilianDL
        android:id="@+id/dcoOverlayBrazilianDL"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle.CaptureScreen"
        android:text="@string/metamap_label_is_photo_clear"
        app:layout_constraintBottom_toTopOf="@id/ivUploadCTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivUploadCTA"
        style="@style/CaptureAction"
        android:src="@drawable/metamap_ic_done_liveness"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivRetryCTA"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:src="@drawable/metamap_ic_retry_liveness"
        app:layout_constraintBottom_toBottomOf="@id/ivUploadCTA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivUploadCTA" />

</androidx.constraintlayout.widget.ConstraintLayout>