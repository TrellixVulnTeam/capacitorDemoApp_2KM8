<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivMain"
        style="@style/MainIcon"
        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/metamap_ic_vpn_detected" />


    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="@string/metamap_label_vpn_title"
        app:layout_constraintBottom_toTopOf="@+id/tvSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivMain" />


    <TextView
        android:id="@+id/tvSubtitle"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_label_vpn_description"
        app:layout_constraintBottom_toTopOf="@+id/pbLoading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionTryAgain"
        style="@style/Button.Main"
        app:isPrimary="true"
        android:text="@string/metamap_label_try_again"
        app:layout_constraintBottom_toTopOf="@+id/btnActionSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionSkip"
        style="@style/Button.SecondaryNew"
        android:text="@string/metamap_label_skip"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnActionClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnActionClose"
        style="@style/Button.SecondaryNew"
        android:text="@string/metamap_label_close"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/pbLoading"
        style="@style/BottomProgressBar"
        app:layout_constraintBottom_toTopOf="@+id/btnActionTryAgain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
