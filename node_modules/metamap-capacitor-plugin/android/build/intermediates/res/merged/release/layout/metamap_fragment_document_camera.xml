<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clDocCameraParentLayout"
    android:background="@color/metamap_background_color_dark"
    android:theme="@style/ContainerDark">

    <androidx.camera.view.PreviewView
        android:id="@+id/pvPreviewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.DocumentCameraOverlay
        android:id="@+id/dcoOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.metamap.sdk_components.widget.DocumentCameraOverlayBrazilianDL
        android:id="@+id/dcoOverlayBrazilianDL"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivActionOpenGallery"
        android:layout_width="@dimen/_44sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@id/ivActionCaptureImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivActionCaptureImage"
        app:srcCompat="@drawable/metamap_ic_gallery"
        app:tint="@color/metamap_background_color_light"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvInfoTakeDoc"
        style="@style/Text.FragmentTitle.CaptureScreen"
        app:layout_constraintBottom_toTopOf="@+id/ivActionCaptureImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Front Side \nDriver License \nUSA, MA." />

    <ImageView
        android:id="@+id/ivActionCaptureImage"
        style="@style/CaptureAction"
        android:src="@drawable/metamap_ic_capture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>
