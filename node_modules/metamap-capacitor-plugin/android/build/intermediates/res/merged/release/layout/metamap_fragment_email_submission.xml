<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clEmailSubmissionParentLayout"
    android:theme="@style/MetamapTheme.Light">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Text.FragmentTitle"
        android:text="@string/metamap_title_email_submission_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubTitle"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_subtitle_email_submission_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <ImageView
        android:id="@+id/ivMain"
        style="@style/MainIcon"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/tvHintEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:srcCompat="@drawable/metamap_ic_email_verification_step" />

    <TextView
        android:id="@+id/tvHintEmail"
        style="@style/Text.EtInfo"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="@string/metamap_hint_email_submission_fragment"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/etEmail"
        app:layout_constraintEnd_toEndOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="@id/etEmail" />

    <EditText
        android:id="@+id/etEmail"
        style="@style/Text.Input"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLines="1"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layout_constraintBottom_toTopOf="@id/tvInvalidEmailError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvInvalidEmailError"
        style="@style/Text.ErrorHint"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="@string/metamap_invalid_email_error_message_email_submission_fragment"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/btnResend"
        app:layout_constraintEnd_toEndOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="@id/etEmail" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnResend"
        style="@style/Button.SecondaryNew"
        android:text="@string/metamap_label_resend"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tvActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvResendTimer"
        style="@style/Text.FragmentSubtitle"
        android:layout_marginBottom="@dimen/_28sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tvActionPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/_28sdp"/>

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/tvActionPrimary"
        style="@style/Button.Main"
        android:layout_marginBottom="@dimen/_16sdp"
        app:isPrimary="true"
        app:layout_goneMarginBottom="@dimen/_28sdp"
        android:text="@string/metamap_primary_action_title_email_submission_fragment"
        app:layout_constraintBottom_toTopOf="@id/utvSkip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.metamap.sdk_components.widget.UnderlineTextView
        android:id="@+id/utvSkip"
        style="@style/Text.Skip"
        android:text="@string/metamap_label_skip"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ProgressBar
        android:id="@+id/pbProgress"
        style="@style/BottomProgressBar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>