<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/metamap_bg_rounded_dialog"
    android:gravity="center_horizontal"
    android:id="@+id/llAlertDialogParentLayout"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_gravity="end"
        app:srcCompat="@drawable/metamap_ic_close"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvTextTitle"
        style="@style/Text.FragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="@string/metamap_cpf_dialog_title" />

    <TextView
        android:id="@+id/tvTextDescription"
        style="@style/Text.FragmentSubtitle"
        android:text="@string/metamap_cpf_dialog_description" />

    <com.metamap.sdk_components.widget.MetamapIconButton
        android:id="@+id/btnSkipSubmit"
        style="@style/Button.Main"
        android:layout_marginStart="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_36sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:isPrimary="true"
        android:text="@string/metamap_cpf_dialog_button"
        android:textSize="@dimen/_12ssp" />


</LinearLayout>