{
  "name": "metamap-capacitor-plugin",
  "version": "1.0.14",
  "description": "Capacitor plugin for MetaMapSDK",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "npm run prettier -- --check && npm run swiftlint -- lint",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Andrey Posnov",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/android": "^3.3.2",
    "@capacitor/core": "^3.3.2",
    "@capacitor/ios": "^3.3.2",
    "@ionic/prettier-config": "^2.0.0",
    "@ionic/swiftlint-config": "^1.1.2",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "prettier": "^2.0.5",
    "prettier-plugin-java": "^1.6.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.21.0",
    "swiftlint": "^1.0.1",
    "typescript": "~3.8.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.3.2"
  },
  "files": [
    "dist/",
    "ios/",
    "android/",
    "MetamapCapacitorPlugin.podspec"
  ],
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/GetMetaMap/mati-capacitor-plugin"
  },
  "bugs": {
    "url": "https://github.com/GetMetaMap/mati-capacitor-plugin/issues"
  },
  "homepage": "https://github.com/GetMetaMap/mati-capacitor-plugin/blob/main/docs/mati-capacitor.md",
  "dependencies": {
    "metamap-capacitor-plugin": "^1.0.3",
    "@capacitor/cli": "^3.3.2"
  }
}
